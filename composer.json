{
	"name": "isigiel/survey",
	"description": "The new Survey",
	"keywords": ["survey", "laravel"],
	"license": "GPL",
	"type": "application",
	"require": {
		"laravel/framework": "5.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "barryvdh/laravel-ide-helper": "2.*",
        "doctrine/dbal": "2.*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Survey\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "bower install uikit",
            "gulp"
		],
		"post-update-cmd": [
          "bower update",
          "gulp",
          "php artisan clear-compiled",
          "php artisan ide-helper:generate",
          "php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
